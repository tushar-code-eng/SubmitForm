generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String     @id @default(uuid())
  fullName              String
  address               String
  state                 String
  zipCode               String
  mobileNumber          String     @unique
  alternateMobileNumber String?
  orders                Order[]
  createdAt             DateTime
  printDates            DateTime[] //when the print of the customer is taken out.
}

model Order {
  id              String            @id @default(uuid())
  orderDetails    String
  numOfPieces     Int
  numOfParcels    Int
  totalAmount     Int
  orderAddress    String            @default("")
  orderState      String            @default("")
  orderZipCode    String            @default("")
  trackingId      String
  trackingCompany String
  paymentStatus   paymentStatusEnum
  isPrinted       Boolean           @default(false)
  userId          String
  user            User              @relation(fields: [userId], references: [id])
  orderDate       DateTime //when the owner added the order record
}

enum paymentStatusEnum {
  pending
  paid
}
